{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "ConnectionStrings": {
    "Instagram69BotMetrics": "Server=127.0.0.1,1433;Database=Instagram69BotMetrics;User Id=SA;Password=PASSWORD;TrustServerCertificate=true"
  },
  "BotConfiguration": {
    "BotToken": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Warning",
        "System.Net.Http.HttpClient.ClientHandler": "Warning",
        "System.Net.Http.HttpClient.Default.LogicalHandler": "Warning"
      }
    },
    "WriteTo": {
      "Sublogger": {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "MinimumLevel": "Warning",
            "WriteTo": [
              {
                "Name": "Console",
                "Args": {
                  "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
                  "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Grayscale, Serilog.Sinks.Console"
                }
              }
            ]
          }
        }
      },
      "Seq": {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "telegram_message_sender",
      "ApplicationVersion": "1.0.0"
    },
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 5
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ]
  }
}
